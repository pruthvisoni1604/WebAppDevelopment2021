@model Product
@{
    string title = ViewBag.Action + " Product";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Code">Code </label>
        <input asp-for="Code" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Productname">Name </label>
        <input asp-for="Productname" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Productprice">Yealy Price </label>
        <input asp-for="Productprice" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ReleaseDate">Release Date </label>
        <input type="datetime" asp-for="ReleaseDate" class="form-control">
    </div>

    <input type="hidden" asp-for="ProductId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Product" asp-action="List" class="btn btn-primary">Cancel</a>
</form>