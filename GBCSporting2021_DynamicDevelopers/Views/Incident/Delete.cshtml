@model Incident
@{
    ViewBag.Title = "Delete Incident";
}

<h3>Are you sure in <strong>deletion</strong> of this Incident?</h3>
<h4>@Model.title (@Model.Product - @Model.Dateopened)</h4>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <br />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Incident" asp-action="List" class="btn btn-primary">Cancel</a>
</form>


