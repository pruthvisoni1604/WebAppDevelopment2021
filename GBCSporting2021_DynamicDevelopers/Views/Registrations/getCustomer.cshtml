@{
    ViewData["Title"] = "getcustomer";
}

<h2>Get Customer</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="List">
            <div class="form-group">
                <label class="control-label">Customer</label>
                <select name="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Select" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>